@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="login-left">
            <div class="center">
                <h1>¡Bienvenido!</h1>
                <p>Por favor ingrese sus credenciales.</p></>
                @ViewBag.Error
                <form method="post" asp-controller="Acceso" asp-action="Login" id="form">
                    <div class="mb-3" id="mail">
                        <label for="exampleInputEmail1" class="form-label">Correo electronico:</label>
                        <input asp-for="Email" type="email" class="form-control">
                    </div>
                    <div class="mb-3" id="contraseña">
                        <label for="exampleInputPassword1" class="form-label">Nombre:</label>
                        <input asp-for="Nombre" type="text" class="form-control">
                    </div>
                    <button id="botondelogin" type="submit" value="Log in" class="btn btn-primary" asp-action="Login" asp-controller="Acceso">Iniciar Sesion</button>
                </form>

            </div>
        </div>
    </div>

</body>
</html>
